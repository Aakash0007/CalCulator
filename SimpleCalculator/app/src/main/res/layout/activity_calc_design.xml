<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimary"
    android:orientation="vertical"
    tools:context=".CalcActivity">

    <LinearLayout
        android:id="@+id/layout_cal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="24dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/txtCal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:background="@drawable/round_white_background"
            android:padding="8dp"
            android:text="0"
            android:textAlignment="viewEnd"
            android:textAllCaps="true"
            android:textColor="@color/textColor"
            android:textColorHint="@color/textColor"
            android:textSize="32sp"
            android:textStyle="bold|normal"
            tools:ignore="RtlCompat" />

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="1dp"
            android:background="@color/colorPrimaryDark"
            android:orientation="vertical" />

        <TextView
            android:id="@+id/txtResult"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:background="@drawable/round_white_background"
            android:padding="8dp"
            android:text="0"
            android:textAlignment="viewEnd"
            android:textAllCaps="true"
            android:textColor="@color/textColor"
            android:textColorHint="@color/textColor"
            android:textSize="32sp"
            android:textStyle="bold|normal"
            tools:ignore="RtlCompat" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/layout_cal"
        android:layout_margin="8dp"
        android:background="@drawable/round_button_color"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="5">

            <Button
                android:id="@+id/btnClear"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/round_button_color"
                android:text="C"
                android:textAlignment="center"
                android:textAllCaps="true"
                android:textColor="@color/backgroundColor"
                android:textColorHint="@color/backgroundColor"
                android:textSize="16sp"
                android:textStyle="bold|normal" />

            <Button
                android:id="@+id/btnBack"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/round_button_color"
                android:text="←"
                android:textAlignment="center"
                android:textAllCaps="true"
                android:textColor="@color/backgroundColor"
                android:textColorHint="@color/backgroundColor"
                android:textSize="16sp"
                android:textStyle="bold|normal" />

            <Button
                android:id="@+id/btnSin"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/round_button_orange_color"
                android:text="SIN"
                android:textAlignment="center"
                android:textAllCaps="true"
                android:textColor="@color/backgroundColor"
                android:textColorHint="@color/backgroundColor"
                android:textSize="16sp"
                android:textStyle="bold|normal" />

            <Button
                android:id="@+id/btnCos"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/round_button_orange_color"
                android:text="COS"
                android:textAlignment="center"
                android:textAllCaps="true"
                android:textColor="@color/backgroundColor"
                android:textColorHint="@color/backgroundColor"
                android:textSize="16sp"
                android:textStyle="bold|normal" />

            <Button
                android:id="@+id/btnTan"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/round_button_orange_color"
                android:text="TAN"
                android:textAlignment="center"
                android:textAllCaps="true"
                android:textColor="@color/backgroundColor"
                android:textColorHint="@color/backgroundColor"
                android:textSize="16sp"
                android:textStyle="bold|normal" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="8dp"
            android:weightSum="5">

            <Button
                android:id="@+id/btnSeven"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/round_button_color"
                android:text="7"
                android:textAlignment="center"
                android:textAllCaps="true"
                android:textColor="@color/backgroundColor"
                android:textColorHint="@color/backgroundColor"
                android:textSize="16sp"
                android:textStyle="bold|normal" />

            <Button
                android:id="@+id/btnEight"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/round_button_color"
                android:text="8"
                android:textAlignment="center"
                android:textAllCaps="true"
                android:textColor="@color/backgroundColor"
                android:textColorHint="@color/backgroundColor"
                android:textSize="16sp"
                android:textStyle="bold|normal" />

            <Button
                android:id="@+id/btnNine"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/round_button_color"
                android:text="9"
                android:textAlignment="center"
                android:textAllCaps="true"
                android:textColor="@color/backgroundColor"
                android:textColorHint="@color/backgroundColor"
                android:textSize="16sp"
                android:textStyle="bold|normal" />

            <Button
                android:id="@+id/btnAdd"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/round_button_color"
                android:text="+"
                android:textAlignment="center"
                android:textAllCaps="true"
                android:textColor="@color/backgroundColor"
                android:textColorHint="@color/backgroundColor"
                android:textSize="16sp"
                android:textStyle="bold|normal" />

            <Button
                android:id="@+id/btnMinus"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/round_button_color"
                android:text="-"
                android:textAlignment="center"
                android:textAllCaps="true"
                android:textColor="@color/backgroundColor"
                android:textColorHint="@color/backgroundColor"
                android:textSize="16sp"
                android:textStyle="bold|normal" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="8dp"
            android:weightSum="5">

            <Button
                android:id="@+id/btnFour"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/round_button_color"
                android:text="4"
                android:textAlignment="center"
                android:textAllCaps="true"
                android:textColor="@color/backgroundColor"
                android:textColorHint="@color/backgroundColor"
                android:textSize="16sp"
                android:textStyle="bold|normal" />

            <Button
                android:id="@+id/btnFive"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/round_button_color"
                android:text="5"
                android:textAlignment="center"
                android:textAllCaps="true"
                android:textColor="@color/backgroundColor"
                android:textColorHint="@color/backgroundColor"
                android:textSize="16sp"
                android:textStyle="bold|normal" />

            <Button
                android:id="@+id/btnSix"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/round_button_color"
                android:text="6"
                android:textAlignment="center"
                android:textAllCaps="true"
                android:textColor="@color/backgroundColor"
                android:textColorHint="@color/backgroundColor"
                android:textSize="16sp"
                android:textStyle="bold|normal" />

            <Button
                android:id="@+id/btnMulti"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/round_button_color"
                android:text="*"
                android:textAlignment="center"
                android:textAllCaps="true"
                android:textColor="@color/backgroundColor"
                android:textColorHint="@color/backgroundColor"
                android:textSize="16sp"
                android:textStyle="bold|normal" />

            <Button
                android:id="@+id/btnDiv"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/round_button_color"
                android:text="/"
                android:textAlignment="center"
                android:textAllCaps="true"
                android:textColor="@color/backgroundColor"
                android:textColorHint="@color/backgroundColor"
                android:textSize="16sp"
                android:textStyle="bold|normal" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="8dp"
            android:weightSum="5">

            <Button
                android:id="@+id/btnOne"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/round_button_color"
                android:text="1"
                android:textAlignment="center"
                android:textAllCaps="true"
                android:textColor="@color/backgroundColor"
                android:textColorHint="@color/backgroundColor"
                android:textSize="16sp"
                android:textStyle="bold|normal" />

            <Button
                android:id="@+id/btnTwo"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/round_button_color"
                android:text="2"
                android:textAlignment="center"
                android:textAllCaps="true"
                android:textColor="@color/backgroundColor"
                android:textColorHint="@color/backgroundColor"
                android:textSize="16sp"
                android:textStyle="bold|normal" />

            <Button
                android:id="@+id/btnThree"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/round_button_color"
                android:text="3"
                android:textAlignment="center"
                android:textAllCaps="true"
                android:textColor="@color/backgroundColor"
                android:textColorHint="@color/backgroundColor"
                android:textSize="16sp"
                android:textStyle="bold|normal" />

            <Button
                android:id="@+id/btnBracketsOpen"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/round_button_color"
                android:text="("
                android:textAlignment="center"
                android:textAllCaps="true"
                android:textColor="@color/backgroundColor"
                android:textColorHint="@color/backgroundColor"
                android:textSize="16sp"
                android:textStyle="bold|normal" />

            <Button
                android:id="@+id/btnBrackketsClose"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/round_button_color"
                android:text=")"
                android:textAlignment="center"
                android:textAllCaps="true"
                android:textColor="@color/backgroundColor"
                android:textColorHint="@color/backgroundColor"
                android:textSize="16sp"
                android:textStyle="bold|normal" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="8dp"
            android:weightSum="5">

            <Button
                android:id="@+id/btnZero"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="3"
                android:background="@drawable/round_button_color"
                android:text="0"
                android:textAlignment="center"
                android:textAllCaps="true"
                android:textColor="@color/backgroundColor"
                android:textColorHint="@color/backgroundColor"
                android:textSize="16sp"
                android:textStyle="bold|normal" />

            <Button
                android:id="@+id/btnDot"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/round_button_color"
                android:text="."
                android:textAlignment="center"
                android:textAllCaps="true"
                android:textColor="@color/backgroundColor"
                android:textColorHint="@color/backgroundColor"
                android:textSize="16sp"
                android:textStyle="bold|normal" />

            <Button
                android:id="@+id/btnMod"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/round_button_color"
                android:text="%"
                android:textAlignment="center"
                android:textAllCaps="true"
                android:textColor="@color/backgroundColor"
                android:textColorHint="@color/backgroundColor"
                android:textSize="16sp"
                android:textStyle="bold|normal" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="8dp"
            android:weightSum="3">

            <Button
                android:id="@+id/btnSquared"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/round_button_color"
                android:text="√"
                android:textAlignment="center"
                android:textAllCaps="true"
                android:textColor="@color/backgroundColor"
                android:textColorHint="@color/backgroundColor"
                android:textSize="16sp"
                android:textStyle="bold|normal" />

            <Button
                android:id="@+id/btnPow"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/round_button_color"
                android:text="^"
                android:textAlignment="center"
                android:textAllCaps="true"
                android:textColor="@color/backgroundColor"
                android:textColorHint="@color/backgroundColor"
                android:textSize="16sp"
                android:textStyle="bold|normal" />

            <Button
                android:id="@+id/btnInverse"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/round_button_color"
                android:text="1/x"
                android:textAlignment="center"
                android:textAllCaps="true"
                android:textColor="@color/backgroundColor"
                android:textColorHint="@color/backgroundColor"
                android:textSize="16sp"
                android:textStyle="bold|normal" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="8dp">

            <Button
                android:id="@+id/btnResult"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="3"
                android:background="@drawable/round_equal_button_color"
                android:text="="
                android:textAlignment="center"
                android:textAllCaps="true"
                android:textColor="@color/backgroundColor"
                android:textColorHint="@color/backgroundColor"
                android:textSize="16sp"
                android:textStyle="bold|normal" />

        </LinearLayout>

    </LinearLayout>
</RelativeLayout>